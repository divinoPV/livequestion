{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock title %}

{% block body %}
    <div class="bg-lg-rgt">
        <div class="lg-rgst-display">
            <div class="log-registre-btn">
                <p class="auth-btn">Se connecter</p>
            </div>
            <div class="display-lg">
                <div id="login-display">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class="login">
                            <h1 class="h3 mb-3 font-weight-normal">Connexion sécurisé</h1>
                            <label for="inputEmail" class="sr-only">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                   class="form-control" placeholder="Email" required autofocus>
                            <label for="inputPassword" class="sr-only">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control"
                                   placeholder="Mot de passe" required>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <button class="btn btn-lg btn-primary" type="submit">Envoyer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}